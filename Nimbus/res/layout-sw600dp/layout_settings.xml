		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="@dimen/welcome_text"
		        android:text="@string/licenses"
		        android:onClick="onButtonClick"
		        />
		    <Button
		        android:id="@+id/bsHelp"
		        style="@style/BigBorderButton"
