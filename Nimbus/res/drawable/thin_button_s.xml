        	<gradient 
        	    android:startColor="#00000000"
        	    android:centerColor="#00000000"
        	    android:endColor="#00000000"
        	    />
        	<corners 
        	    android:bottomRightRadius="@dimen/thin_btn_shadow"
	     		android:bottomLeftRadius="@dimen/thin_btn_shadow"
		     	android:topLeftRadius="@dimen/thin_btn_shadow"
	  	 	    android:topRightRadius="@dimen/thin_btn_shadow"/>
