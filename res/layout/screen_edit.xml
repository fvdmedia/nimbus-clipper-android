<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

       <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/content_frame"
	    >
	   
	    <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical">
		    <ViewAnimator
			    android:id="@+id/top_switcher"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				> 
				<LinearLayout
	      	    android:id="@+id/tool_edit"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/browser_panel_height"
			    android:orientation="horizontal"
			    android:background="@color/dkBack" 
			    >
			    <ImageButton
			        android:id="@+id/bTurnLeft"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.4"
			        android:scaleType="fitCenter"
			        android:layout_gravity="center_vertical"
			        android:background="@color/transparent"
			        android:contentDescription="@string/save_full"
			        android:padding="@dimen/drawable_subpadding"
			        android:src="@drawable/top_edit_01"/>

			    <ImageButton
			        android:id="@+id/bTurnRight"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:padding="@dimen/drawable_subpadding"
			        android:layout_gravity="center_vertical"
			        android:src="@drawable/top_edit_02"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
			     <ImageButton
			        android:id="@+id/bUndo"
			        android:layout_width="0dp"
			        android:layout_weight="0.8"
			        android:scaleType="centerInside"
			        android:layout_height="wrap_content"
			        android:padding="1dp"
			        android:layout_gravity="center_vertical"
			        android:src="@drawable/top_edit_03"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
			    		  
				<ImageButton
			        android:id="@+id/bClearAll"
			        android:layout_width="0dp"
			        android:layout_weight="0.8"
			        android:scaleType="centerInside"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:padding="1dp"
			        android:src="@drawable/top_edit_04"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
				<ImageButton
			        android:id="@+id/bDone"
			        android:layout_width="0dp"
			        android:layout_weight="0.6"
			        android:scaleType="centerInside"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:padding="1dp"
			        android:src="@drawable/top_edit_05"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
			</LinearLayout>	 
	      	<LinearLayout
	      	    android:id="@+id/tool_done"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/browser_panel_height"
			    android:orientation="horizontal"
			    android:background="@color/dkBack"
			    >
			    <ImageButton
			        android:id="@+id/bSave2Nimbus"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:scaleType="fitCenter"
			        android:layout_gravity="center_vertical"
			        android:background="@color/transparent"
			        android:contentDescription="@string/save_full"
			        android:padding="1dp"
			        android:src="@drawable/top_done_01" />
			    <View 
			       android:layout_width="1dp"
			       android:layout_height="match_parent"
			       android:background="#77FFFFFF"
			       android:layout_marginLeft="2dp"
			       android:layout_marginRight="2dp"
			       android:layout_marginTop="6dp"
			       android:layout_marginBottom="6dp"/>
			    <ImageButton
			        android:id="@+id/bSave2SD"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:padding="1dp"
			        android:layout_gravity="center_vertical"
			        android:src="@drawable/top_done_03"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
			    <View 
			       android:layout_width="1dp"
			       android:layout_height="match_parent"
			       android:background="#77FFFFFF"
			       android:layout_marginLeft="2dp"
			       android:layout_marginRight="2dp"
			       android:layout_marginTop="6dp"
			       android:layout_marginBottom="6dp"/>
			     <ImageButton
			        android:id="@+id/btnShare"
			        android:layout_width="0dp"
			        android:layout_weight="0.5"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:padding="1dp"
			        android:layout_gravity="center_vertical"
			        android:src="@drawable/top_done_04"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
			    		  
				<ImageButton
			        android:id="@+id/btnBack"
			        android:layout_width="0dp"
			        android:layout_weight="0.6"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:padding="1dp"
			        android:src="@drawable/top_done_05"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full" />
			</LinearLayout>	
			<LinearLayout
	      	    android:id="@+id/tool_edit_land"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/browser_panel_height"
			    android:orientation="horizontal"
			    android:background="@color/ltBack" 
			    >
			    <ImageButton
			        android:id="@+id/bTurnLeft_land"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.4"
			        android:scaleType="fitCenter"
			        android:layout_gravity="center_vertical"
			        android:background="@color/transparent"
			        android:contentDescription="@string/save_full"
			        android:padding="@dimen/drawable_subpadding"
			        android:src="@drawable/top_edit_01"
			        android:onClick="onTopBarClick"/>

			    <ImageButton
			        android:id="@+id/bTurnRight_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:padding="@dimen/drawable_subpadding"
			        android:layout_gravity="center_vertical"
			        android:src="@drawable/top_edit_02"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full"
					android:onClick="onTopBarClick" />
			    <ImageButton
			        android:id="@+id/bEditPage_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:layout_height="match_parent"
			        android:src="@drawable/tools_01"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full"
					android:onClick="onTopBarClick" />
			    <ImageButton
			        android:id="@+id/bToolShape_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:layout_height="match_parent"
			        android:padding="@dimen/drawable_subpadding"
			        android:src="@drawable/draw_tools_01"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_fragment"
					android:onClick="onTopBarClick" />
				<ImageButton
			        android:id="@+id/bToolText_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:layout_height="match_parent"
			        android:padding="@dimen/drawable_subpadding"
			        android:src="@drawable/tools_03"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/take_screenshot"
					android:onClick="onTopBarClick" />
			    <ImageButton
			        android:id="@+id/bToolCrop_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:layout_height="match_parent"
			        android:padding="@dimen/drawable_subpadding"
			        android:src="@drawable/se_icon_crop"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_fragment"
					android:onClick="onTopBarClick" />
				<com.fvd.classes.CircleButton
			        android:id="@+id/bToolColor_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:layout_height="match_parent"
			        android:padding="@dimen/drawable_subpadding"
			        
			        android:background="@color/transparent"
			        android:scaleType="fitCenter"
					android:contentDescription="@string/take_screenshot"
					android:onClick="onTopBarClick" />	
			     <ImageButton
				        android:id="@+id/bUndo_land"
				        android:layout_width="0dp"
				        android:layout_weight="0.8"
				        android:scaleType="fitCenter"
				        android:layout_height="wrap_content"
				        android:padding="1dp"
				        android:layout_gravity="center_vertical"
				        android:src="@drawable/top_edit_03"
				        android:background="@drawable/setting_selector"
						android:contentDescription="@string/save_full"
						android:onClick="onTopBarClick" />
			    		  
				<ImageButton
			        android:id="@+id/bClearAll_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.8"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:padding="1dp"
			        android:src="@drawable/top_edit_04"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full"
					android:onClick="onTopBarClick" />
				<ImageButton
			        android:id="@+id/bDone_land"
			        android:layout_width="0dp"
			        android:layout_weight="0.6"
			        android:scaleType="fitCenter"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:padding="1dp"
			        android:src="@drawable/top_edit_05"
			        android:background="@drawable/setting_selector"
					android:contentDescription="@string/save_full"
					android:onClick="onTopBarClick" />
			</LinearLayout>    
			<include layout="@layout/draw_tools"
				android:visibility="gone"/>
			<include layout="@layout/color_tools"
				android:visibility="gone"/>
		</ViewAnimator>
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_weight="1"
		    android:layout_height="0dp">
		<com.fvd.paint.DrawView
		    android:id="@+id/painter"
		    android:background="@color/ltBack"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		/>
		
		<!-- color menu -->
		<LinearLayout 
		    android:id="@+id/color_menu"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true" 
    		android:orientation="vertical"
    		android:background="@android:color/white"
    		android:visibility="gone"
    		android:clickable="true" >

			 <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="@dimen/drawable_subpadding"
			    android:layout_marginBottom="1dp"
			    android:orientation="horizontal"
			    android:background="@color/dkBack" >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:gravity="center_vertical"
			        android:paddingRight="@dimen/drawable_subpadding"
			        android:text="@string/type"
			        android:textSize="@dimen/password_text"
			        android:textColor="@android:color/white"
			        />
			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="vertical"
				    >
					<TextView 
					    android:id="@+id/tvTextType"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:text="@string/standart_size"
				        android:textSize="@dimen/password_text"
				        android:textColor="@android:color/white"/>  
					<SeekBar
			            android:id="@+id/seekBarType"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:progressDrawable="@drawable/icon_progress_line"
			            android:thumb="@drawable/icon_thumb"
			            android:max="40"
		       			android:progress="1"
		       			
			            />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="1dp"
			    android:padding="@dimen/drawable_subpadding"
			    android:orientation="horizontal"
			    android:background="@color/dkBack" >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:gravity="center_vertical"
			        android:paddingRight="@dimen/drawable_subpadding"
			        android:text="@string/line"
			        android:textSize="@dimen/password_text"
			        android:textColor="@android:color/white"
			        />
			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:gravity="center_vertical|center_horizontal"
				    >
					<ImageView
					    android:id="@+id/ivLine"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        
				        android:padding="@dimen/drawable_subpadding"
						android:src="@drawable/icon_line"
						android:contentDescription="@string/line"
						android:scaleType="fitCenter"
				        />
					<SeekBar
			            android:id="@+id/seekBarLine"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:progressDrawable="@drawable/icon_progress_line"
			            android:thumb="@drawable/icon_thumb"
			            android:max="40"
		       			android:progress="1"
			            />
				</LinearLayout>		
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    <ImageButton
		        android:id="@+id/bColor1"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/icon_color_blue"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>
		    <ImageButton
		        android:id="@+id/bColor2"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/icon_color_red"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>
		    <ImageButton
		        android:id="@+id/bColor3"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/icon_color_yellow"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>    
		    <ImageButton
		        android:id="@+id/bColor4"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/icon_color_black"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>
		   <ImageButton
		        android:id="@+id/bColor5"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
		        android:clickable="true"
		        android:src="@drawable/icon_palette"
		        android:background="@color/dkBack"/>
		</LinearLayout>
		</LinearLayout>
		<!-- /color menu -->
		
		<!-- text field -->
		<LinearLayout
		    android:id="@+id/text_field"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:background="@color/dkBack"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
		    android:orientation="vertical" 
		    android:visibility="gone">
		
		    <EditText
		        android:id="@+id/etEditorText"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_gravity="top"
		        android:layout_weight="1"
		        android:layout_marginLeft="@dimen/password_text"
		        android:layout_marginRight="@dimen/password_text"
		        android:background="@color/transparent"
		        android:hint="@string/text_hint"
		        android:maxLines="100"
		        android:minLines="2"
		        android:padding="@dimen/drawable_subpadding"
		        android:textColor="@color/text_normal"
		        android:textColorHint="@color/text_normal"
		        android:textSize="@dimen/password_text">
		        <requestFocus />
		    </EditText>
			<View 
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@android:color/white"
			    android:layout_marginLeft="@dimen/password_text"
		        android:layout_marginRight="@dimen/password_text"/>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="@color/transparent"
		        android:gravity="center"
		        android:orientation="horizontal" >
		
		    
		    <ImageButton
				        android:id="@+id/bStroke"
				        android:layout_width="55dp"
				        android:layout_height="50dp"
				        android:layout_margin="10dp"
				        android:src="@drawable/stroke_selector"
				        android:background="@color/transparent"
				        android:scaleType="fitCenter"
						android:contentDescription="@string/blur"
						 />
		    <Button
				        android:id="@+id/bApplyText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_margin="6dp"
				        android:text="@string/done"
				        android:paddingLeft="@dimen/password_text"
		        		android:paddingRight="@dimen/password_text"
		        		android:textColor="@android:color/white"
		        		android:textSize="@dimen/input_text"
				        android:background="@drawable/dialog_button_selector"
						android:contentDescription="@string/blur"
						/>
			</LinearLayout>
		</LinearLayout>
		<!-- /text field -->
		<!-- draw tools -->
		<LinearLayout
		    android:id="@+id/draw_tools"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@color/dkBack"
		    android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:visibility="gone"
             >
		    <ImageButton
		        android:id="@+id/bDraw1"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_01"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>
		    <ImageButton
		        android:id="@+id/bDraw3"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="1dp"
		        android:layout_marginRight="1dp"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_02"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>
		    <ImageButton
		        android:id="@+id/bDraw2"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:layout_marginRight="1dp"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_03"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
				/>    
			<ImageButton
		        android:id="@+id/bDraw4"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_04"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"/>
		    <ImageButton
		        android:id="@+id/bDraw8"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_05"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
		        />
		    <ImageButton
		        android:id="@+id/bDraw5"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_06"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
		        />
		    <ImageButton
		        android:id="@+id/bDraw6"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
				android:padding="@dimen/drawable_subpadding"
		        android:background="@drawable/button_solid_selector"
		        android:src="@drawable/draw_tools_07"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/app_name"
		        />
		</LinearLayout>

		<!-- /draw tools -->
		</RelativeLayout>
		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
       	<LinearLayout
       	    android:id="@+id/footer"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/browser_panel_height"
		    android:orientation="horizontal"
		    android:background="@color/ltBack" >
		    <ImageButton
		        android:id="@+id/bEditPage"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:src="@drawable/tools_01"
		        
		        android:background="@drawable/setting_selector"
				android:contentDescription="@string/save_full" />
		    <ImageButton
		        android:id="@+id/bToolShape"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:padding="@dimen/drawable_subpadding"
		        android:src="@drawable/draw_tools_01"
		        android:background="@drawable/setting_selector"
				android:contentDescription="@string/save_fragment" />
			<ImageButton
		        android:id="@+id/bToolText"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:padding="@dimen/drawable_subpadding"
		        android:src="@drawable/tools_03"
		        android:background="@drawable/setting_selector"
				android:contentDescription="@string/take_screenshot" />
		    <ImageButton
		        android:id="@+id/bToolCrop"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:padding="@dimen/drawable_subpadding"
		        android:src="@drawable/se_icon_crop"
		        android:background="@drawable/setting_selector"
				android:contentDescription="@string/save_fragment" />
			<com.fvd.classes.CircleButton
		        android:id="@+id/bToolColor"
